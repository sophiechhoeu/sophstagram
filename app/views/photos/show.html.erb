<p id="notice"><%= notice %></p>

<div class="card" style="width: 20rem;">
  <img class="card-img-top" src="<%= @photo.image_url %>" alt="Card image cap">
  <div class="card-block">
    <%= @photo.user.username %>
    <h6 class="card-title"><%= @photo.caption %></h6>

    <%= render "comments/comment" %>

    <%= form_for([@photo, @photo.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :comments %><br/>
      <%= f.text_field :content %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>

